{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "build/**",
      "tools/**",
      "instagram_designs/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "redirects": [
      {
        "source": "/news/index.html",
        "destination": "/bloq",
        "type": 301
      },
      {
        "source": "/news",
        "destination": "/bloq",
        "type": 301
      },
      {
        "source": "/news/",
        "destination": "/bloq",
        "type": 301
      },
      {
        "source": "/news/:path*",
        "destination": "/bloq/:path*",
        "type": 301
      },
      {
        "source": "/blog",
        "destination": "/bloq",
        "type": 301
      },
      {
        "source": "/blog/",
        "destination": "/bloq",
        "type": 301
      },
      {
        "source": "/blog/:path*",
        "destination": "/bloq/:path*",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/bloq/**",
        "destination": "/bloq/view.html"
      },
      {
        "source": "/!(news|blog|bloq)/**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|css|js|woff2|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
